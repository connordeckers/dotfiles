	revert-file = "!f() { git checkout HEAD -- $1; }; f"
	changelog = "!BRANCH=$(git rev-parse --abbrev-ref HEAD); HASH=$(git log $BRANCH --merges --pretty=format:\"%h\" -n 1); git log $HASH^..$HASH --pretty=format:\"[%h] %an, %ar%n%B\""
	update = !git fetch && git pull
	;history = log --oneline --graph
	history = log --format='%C(auto) %h %C(dim)(%an) %C(auto)%d %s %C(dim)[%ah]' --graph
	;history = log --graph --decorate --pretty=format:"%C(yellow)%h%Creset %C(dim)(%ch)%Creset %C(bold green bold)%d%Creset %s %C(dim #818589)(%cn)%Creset"
	merge-into = !git-merge-into
	init-from = !git-clone-as-template 
	release-to = !git-release-to
