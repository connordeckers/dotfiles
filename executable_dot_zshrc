# Add a few well-known user bin paths
export N_PREFIX=$HOME/.npm
export PATH=$HOME/.local/bin:$HOME/bin:/usr/local/bin:$N_PREFIX/bin:$PATH

# Add some programming tools (Node, Rust and Golang) to the path as well
export PATH=$PATH:./node_modules/.bin:$(go env GOPATH)/bin

export PATH=$PATH:$HOME/.emacs.d/bin

# Lets record my personal github. It's used enough, after all.
export GH=github.com/connordeckers

source ~/.zshrc-common
if [[ -f ~/.zshrc-override ]]; then
	source ~/.zshrc-override
fi

export PNPM_HOME="/home/connor/.local/share/pnpm"
export PATH="$PNPM_HOME:$PATH"

# Load nodenv automatically by appending
# the following to your profile:

eval "$(nodenv init -)"

export MANPAGER='nvim +Man!'
export MANWIDTH=999

eval "$(atuin init zsh)"
